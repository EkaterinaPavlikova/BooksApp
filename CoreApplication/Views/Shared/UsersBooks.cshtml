@model CoreApplication.Models.Order
<div class="card card-outline-primary m-1 p-1">

    <div class="bg-faded p-1">
        <h4>
            @Model.Book.Title
        </h4>
        <small>@Model.Book.Year г.</small>
    </div>
    <form id="@Model.Book.Id" asp-action="RemoveFromOrder"
          asp-controller="Order" method="post">
        <input type="hidden" asp-for="OrderId" />
        <input type="hidden" name="returnUrl"
               value="@ViewContext.HttpContext.Request.PathAndQuery()" />
        <span class="card-text p-1">
            Автор: <strong> @(Model.Book.Author != null ? Model.Book.Author.Name : "")</strong>
            Жанр: <strong> @(Model.Book.Genre != null ?Model.Book.Genre.GenreName : "")</strong>
                  
            <button type="submit"
                    class="btn btn-success btn-sm pull-right"
                    style="float:right">
                Вернуть
            </button>
        </span>
    </form>

</div>
