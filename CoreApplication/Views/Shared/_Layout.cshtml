@using System.Security.Claims


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" asp-href-include="/lib/bootstrap/dist/**/*.min.css" asp-href-exclude="**/*-reboot*,**/*-grid*" />
    <link rel="stylesheet" asp-href-include="/lib/styles/LibraryStyle.css">
    <link rel="stylesheet" asp-href-include="/lib/font-awesome/css/*.css" />

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.js"></script>




</head>
<body>

    <div class="navbar navbar-dark bg-dark" role="navigation">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">Библиотека</a>
            </div>
            @*@await Html.PartialAsync("NavMenu")*@                       
            @await Component.InvokeAsync("RoleAccessNavMenu")            
            @await Html.PartialAsync("_LoginPartial")

        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <footer>
            <p style="text-align: center;">© @DateTime.Today.Year - Библиотека</p>
        </footer>
    </div>


</body>
</html>
