
@model CoreApplication.Models.ViewModels.BooksListViewModel
<div class="header">
    <h2>Все книги</h2>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Название</th>
            <th>Год</th>
            <th>Автор</th>
            <th>Жанр</th>
            <th>Количество</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Books)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Year)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre.GenreName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Count)
                </td>
                <td>
                    @Html.HiddenFor(modelItem => item.AuthorId)
                    @Html.HiddenFor(modelItem => item.GenreId)
                    @Html.ActionLink("Редактировать", "Edit", new { bookId = item.Id }) |
                    @Html.ActionLink("Удалить", "Delete", new { bookId = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
<div page-model="@Model.PagingInfo" page-action="BooksEditPage" page-classes-enabled="true"
     page-class="btn" page-class-normal="btn-secondary"
     page-class-selected="btn-primary"
     page-param="p"
     class="btn-group pull-right m-1">

</div>


<div class="text-center">
    <a asp-action="Create" class="btn btn-primary">Добавить книгу</a>
</div>

